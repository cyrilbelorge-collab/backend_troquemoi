{
  "name": "troquemoi-backend",
  "version": "1.0.0",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "prestart": "npx prisma migrate deploy || echo '⚠️ Prisma migrate failed — continuing...'",
